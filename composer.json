{
    "name": "leroy-merlin-br/metamorphosis",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "kafka"
    ],
    "description": "Kafka package for laravel applications",
    "require": {
        "ext-rdkafka": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "~6.5.0",
        "illuminate/support": "^5.5 || ^6.0",
        "illuminate/console": "^5.5 || ^6.0",
        "illuminate/config": "^5.5 || ^6.0",
        "php": ">=7.1",
        "wikimedia/avro": "^1.7"
    },
    "require-dev": {
        "leroy-merlin-br/coding-standard": "^0.1.0",
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "^1.3.0",
        "kwn/php-rdkafka-stubs": "~1.1.0",
        "orchestra/testbench": "^3.5 || ^4.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4" : {
            "Metamorphosis\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Boitata Team",
            "email": "boitata@leroymerlin.com.br"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Metamorphosis\\MetamorphosisServiceProvider"
            ]
        },
        "aliases":{
            "Metamorphosis": "Metamorphosis\\Facades\\Metamorphosis"
        }
    }
}
