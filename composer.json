{
    "name": "leroy-merlin-br/metamorphosis",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "kafka"
    ],
    "description": "Kafka package for laravel applications",
    "require": {
        "ext-rdkafka": ">=4.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5.0 || ^7.0",
        "illuminate/support": "^5.5 || ^6.0 || ^7.0 || ^8.0",
        "illuminate/console": "^5.5 || ^6.0 || ^7.0 || ^8.0",
        "illuminate/config": "^5.5 || ^6.0 || ^7.0 || ^8.0",
        "php": ">=7.4",
        "wikimedia/avro": "^1.9.0"
    },
    "require-dev": {
        "leroy-merlin-br/coding-standard": "^v3.1.0",
        "phpunit/phpunit": "^9.5.24",
        "mockery/mockery": "^1.5.1",
        "kwn/php-rdkafka-stubs": "^2.2.1",
        "orchestra/testbench": "^6.25.0",
        "dms/phpunit-arraysubset-asserts": "^0.2.1",
        "phpro/grumphp": "^1.13.0",
        "vimeo/psalm": "^4.27.0",
        "psalm/plugin-mockery": "^0.9.1",
        "rector/rector": "^0.13.10"
    },
    "autoload": {
        "psr-4": {
            "Metamorphosis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Boitata Team",
            "email": "boitata@leroymerlin.com.br"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Metamorphosis\\MetamorphosisServiceProvider"
            ]
        },
        "aliases": {
            "Metamorphosis": "Metamorphosis\\Facades\\Metamorphosis"
        }
    },
    "scripts": {
        "setup-dev": [
            "@composer install",
            "vendor/bin/grumphp git:init"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    }
}
